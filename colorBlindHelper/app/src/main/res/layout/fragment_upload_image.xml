<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.Tabs.uploadImageFragment">

    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnSavePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="#232F34"
        app:backgroundTint="@null"
        android:textStyle="bold"
        android:text="Save" />
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

    <ImageView
        android:id="@+id/cameraView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/baseline_arrow_circle_up_24"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/editCameraView"
        android:layout_marginLeft="2dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/baseline_camera_enhance_24"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        />
    </LinearLayout>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btnUploadPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="#232F34"
        app:backgroundTint="@null"
        android:textStyle="bold"
        android:text="upload picture" />

    <TextView
        android:id="@+id/tvSelectPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#344955"
        android:text="Select a picture to upload" />
</LinearLayout>